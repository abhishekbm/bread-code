<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="shakestudios.traintimer.Fragments.FaresFragment">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Fares"
        android:id="@+id/fare_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="145dp"
        android:layout_gravity="right|bottom"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Origin"
        android:id="@+id/textView5"
        android:layout_above="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_marginTop="120dp"
        android:visibility="invisible"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_above="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:layout_gravity="center_vertical|top"
        android:layout_marginTop="180dp"
        android:visibility="invisible"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Destination"
        android:id="@+id/textView6"
        android:layout_above="@+id/spinner2"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="left|center_vertical"
        android:visibility="invisible"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|center_vertical"
        android:layout_marginTop="70dp"
        android:visibility="invisible"
        />

    <RadioGroup
        android:id="@+id/TimingGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="right|top">

        <RadioButton
            android:id="@+id/PurpleRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/Purple"
            android:text="Purple Line"
            android:layout_marginTop="65dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp" />

        <RadioButton
            android:id="@+id/GreenRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="65dp"
            android:buttonTint="@color/Green"
            android:text="Green Line" />


    </RadioGroup>

</FrameLayout>
