<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:id="@+id/farefrag"
    tools:context="shakestudios.traintimer.Fragments.FaresFragment">

    <AutoCompleteTextView
        android:id="@+id/textView5"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_marginTop="150dp"
        android:dropDownHeight="500px"
        android:hint="Origin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp"
        android:focusableInTouchMode="true" >
    </AutoCompleteTextView>


    <AutoCompleteTextView
        android:id="@+id/textView6"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|top"
        android:layout_marginTop="150dp"
        android:hint="Destination"
        android:dropDownHeight="500px"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorHighlight="@color/Black"
        android:textCursorDrawable="@null"
        android:textSize="18sp"
        android:focusableInTouchMode="true" >
    </AutoCompleteTextView>

    <Button
        android:id="@+id/fare_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:text="Get Fares" />
    <RadioGroup
        android:id="@+id/TimingGroup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="top">

        <RadioButton
            android:id="@+id/PurpleRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/Purple"
            android:text="Purple Line"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="80dp"
            android:layout_marginTop="80dp" />

        <RadioButton
            android:id="@+id/GreenRadio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:buttonTint="@color/Green"
            android:text="Green Line"
            android:layout_marginTop="80dp" />


    </RadioGroup>

</FrameLayout>
