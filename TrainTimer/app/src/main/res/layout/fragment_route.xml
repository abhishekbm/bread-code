<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigationAcivity">

    <!-- TODO: Update blank fragment layout -->
    <AutoCompleteTextView
        android:id="@+id/textView5"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_marginTop="80dp"
        android:dropDownHeight="wrap_content"
        android:elevation="5dp"
        android:focusableInTouchMode="true"
        android:hint="Origin"
        android:imeOptions="actionNext"
        android:inputType="textPhonetic"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="18sp">

    </AutoCompleteTextView>


    <Button
        android:id="@+id/routeButton"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="right|top"
        android:layout_marginRight="10dp"
        android:layout_marginTop="100dp"
        android:background="@color/colorPrimary"
        android:elevation="100dp"
        android:text="Route It"
        android:textColor="@color/windowBackground"
        android:theme="@style/MyMaterialTheme" />

    <AutoCompleteTextView
        android:id="@+id/textView6"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:layout_marginBottom="90dp"
        android:layout_marginTop="120dp"
        android:dropDownHeight="wrap_content"
        android:elevation="5dp"
        android:focusableInTouchMode="true"
        android:hint="Destination"
        android:imeOptions="actionNext"
        android:inputType="textPhonetic"
        android:lines="1"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColorHighlight="@color/Black"
        android:textCursorDrawable="@null"
        android:textSize="18sp"></AutoCompleteTextView>
    <!--  <TextView
        android:id="@+id/numberofStations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="10dp"
        android:textColor="@color/Black"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/showStations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:textColor="@color/Purple"
        android:textSize="15dp" />-->

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="364dp"
        android:id="@+id/recycler_view"
        android:scrollbars="vertical"
        android:layout_gravity="center|bottom"
        android:gravity="center_vertical"
        android:layout_marginTop="100dp">

    </android.support.v7.widget.RecyclerView>
    <TextView
        android:id="@+id/routemap"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginRight="10dp"
        android:clickable="true"
        android:textColor="@color/Purple"
        android:textSize="15dp"
        android:layout_marginBottom="80dp" />

    <View
        android:layout_width="fill_parent"
        android:background="@android:color/darker_gray"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:layout_marginBottom="80dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:textColor="@color/Black"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:id="@+id/station_header"
        />

</FrameLayout>
